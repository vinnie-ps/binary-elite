    <style>
        /* ===== RESET & BASE ===== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            /* Colors */
            --color-bg-dark: #0a0a0f;
            --color-bg-darker: #050508;
            --color-bg-card: rgba(15, 15, 25, 0.8);
            --color-accent-blue: #3b82f6;
            --color-accent-blue-light: #60a5fa;
            --color-accent-blue-glow: rgba(59, 130, 246, 0.5);
            --color-text-primary: #f8f9fa;
            --color-text-secondary: #b4b8c5;
            --color-text-muted: #6b7280;
            --color-border: rgba(59, 130, 246, 0.2);

            /* Typography */
            --font-serif: 'Playfair Display', serif;
            --font-sans: 'Inter', sans-serif;

            /* Spacing */
            --space-sm: 1rem;
            --space-md: 2rem;
            --space-lg: 4rem;
            --space-xl: 6rem;

            /* Effects */
            --blur-sm: 8px;
            --blur-md: 16px;
            --blur-lg: 24px;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: var(--font-sans);
            background: var(--color-bg-dark);
            color: var(--color-text-primary);
            line-height: 1.6;
            overflow-x: hidden;
            position: relative;
        }

        /* ===== ANIMATED BACKGROUND ===== */
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            overflow: hidden;
            background: radial-gradient(ellipse at top, #0f1419 0%, var(--color-bg-dark) 50%, var(--color-bg-darker) 100%);
        }

        .stars {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .star {
            position: absolute;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            animation: twinkle var(--duration) infinite ease-in-out;
        }

        @keyframes twinkle {

            0%,
            100% {
                opacity: 0.3;
            }

            50% {
                opacity: 1;
            }
        }

        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                linear-gradient(rgba(59, 130, 246, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(59, 130, 246, 0.03) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: gridMove 20s linear infinite;
            opacity: 0.5;
        }

        @keyframes gridMove {
            0% {
                transform: translateY(0);
            }

            100% {
                transform: translateY(50px);
            }
        }

        /* ===== LAYOUT ===== */
        .content-wrapper {
            position: relative;
            z-index: 1;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 var(--space-md);
        }

        section {
            padding: var(--space-xl) 0;
            opacity: 0;
            transform: translateY(30px) blur(4px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        section.visible {
            opacity: 1;
            transform: translateY(0) blur(0);
        }

        /* ===== HERO SECTION ===== */
        .hero {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: var(--space-lg) var(--space-md);
            position: relative;
        }

        .logo-container {
            margin-bottom: var(--space-lg);
            position: relative;
            animation: logoFloat 6s ease-in-out infinite;
        }

        @keyframes logoFloat {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .logo {
            width: 200px;
            height: 200px;
            border: 3px solid var(--color-accent-blue);
            border-radius: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(15, 15, 25, 0.5);
            backdrop-filter: blur(10px);
            box-shadow:
                0 0 40px var(--color-accent-blue-glow),
                0 0 80px var(--color-accent-blue-glow),
                inset 0 0 40px rgba(59, 130, 246, 0.1);
            animation: logoPulse 10s ease-in-out infinite;
            position: relative;
            overflow: hidden;
        }

        .logo::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg,
                    transparent,
                    rgba(59, 130, 246, 0.1),
                    transparent);
            animation: shimmer 3s linear infinite;
        }

        @keyframes shimmer {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }

            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }

        @keyframes logoPulse {

            0%,
            100% {
                box-shadow:
                    0 0 40px var(--color-accent-blue-glow),
                    0 0 80px var(--color-accent-blue-glow),
                    inset 0 0 40px rgba(59, 130, 246, 0.1);
            }

            50% {
                box-shadow:
                    0 0 60px var(--color-accent-blue-glow),
                    0 0 120px var(--color-accent-blue-glow),
                    inset 0 0 60px rgba(59, 130, 246, 0.2);
            }
        }

        .logo-text {
            font-size: 120px;
            font-family: var(--font-serif);
            font-weight: 700;
            color: var(--color-accent-blue);
            text-shadow: 0 0 20px var(--color-accent-blue-glow);
        }

        .hero h1 {
            font-family: var(--font-serif);
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 600;
            margin-bottom: var(--space-sm);
            letter-spacing: 0.02em;
        }

        .hero .tagline {
            font-size: clamp(1rem, 2vw, 1.5rem);
            color: var(--color-text-secondary);
            margin-bottom: var(--space-md);
            font-weight: 300;
        }

        .hero .description {
            max-width: 600px;
            margin: 0 auto var(--space-lg);
            color: var(--color-text-muted);
            font-size: 1rem;
            line-height: 1.8;
        }

        /* ===== BUTTONS ===== */
        .cta-buttons {
            display: flex;
            gap: var(--space-sm);
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn {
            padding: 1rem 2.5rem;
            font-size: 1rem;
            font-weight: 500;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            font-family: var(--font-sans);
            text-decoration: none;
            display: inline-block;
            position: relative;
            overflow: hidden;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-accent-blue) 0%, #2563eb 100%);
            color: white;
            box-shadow: 0 4px 20px rgba(59, 130, 246, 0.3);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--color-accent-blue-light) 0%, var(--color-accent-blue) 100%);
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        .btn-primary:hover::before {
            opacity: 1;
        }

        .btn-primary:hover {
            transform: translateY(-2px) scale(1.02);
            box-shadow:
                0 6px 30px rgba(59, 130, 246, 0.4),
                inset 0 0 20px rgba(255, 255, 255, 0.1);
        }

        .btn-secondary {
            background: transparent;
            color: var(--color-accent-blue);
            border: 2px solid var(--color-accent-blue);
        }

        .btn-secondary:hover {
            background: rgba(59, 130, 246, 0.1);
            box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
            transform: translateY(-2px) scale(1.02);
        }

        .btn span {
            position: relative;
            z-index: 1;
        }

        /* ===== SECTION HEADERS ===== */
        .section-header {
            text-align: center;
            margin-bottom: var(--space-lg);
        }

        .section-header h2 {
            font-family: var(--font-serif);
            font-size: clamp(2rem, 4vw, 3rem);
            font-weight: 600;
            margin-bottom: var(--space-sm);
        }

        .section-header .subtitle {
            font-size: 1.25rem;
            color: var(--color-text-secondary);
            font-weight: 300;
        }

        .section-header .description {
            max-width: 700px;
            margin: var(--space-sm) auto 0;
            color: var(--color-text-muted);
            line-height: 1.8;
        }

        /* ===== FEATURE CARDS ===== */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: var(--space-md);
            margin-top: var(--space-lg);
        }

        .feature-card {
            background: var(--color-bg-card);
            border: 1px solid var(--color-border);
            border-radius: 16px;
            padding: var(--space-lg);
            text-align: center;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease-in-out;
            opacity: 0;
            transform: translateY(20px);
            position: relative;
            overflow: hidden;
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, transparent 100%);
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        .feature-card.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .feature-card:hover {
            transform: translateY(-5px) scale(1.02);
            border-color: var(--color-accent-blue);
            box-shadow:
                0 10px 40px rgba(59, 130, 246, 0.2),
                inset 0 0 40px rgba(59, 130, 246, 0.05);
        }

        .feature-card:hover::before {
            opacity: 1;
        }

        .feature-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto var(--space-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            filter: drop-shadow(0 0 20px var(--color-accent-blue-glow));
        }

        .feature-card h3 {
            font-family: var(--font-serif);
            font-size: 1.75rem;
            margin-bottom: var(--space-sm);
            color: var(--color-text-primary);
        }

        .feature-card p {
            color: var(--color-text-muted);
            line-height: 1.7;
        }

        /* ===== PROJECT CARDS ===== */
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: var(--space-md);
            margin-top: var(--space-lg);
        }

        .project-card {
